@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta charset="ISO-8859-1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>REGISTER - PSO AKADEMİ | YÖNETİM SİSTEMİ</title>
    <meta http-equiv="content-language" content="TR">
    <meta http-equiv="content-language" content="ENG">
    <meta http-equiv="cache-control" content="no-cache">
    <meta http-equiv="Copyright" content="Copyright © 2021, RESPONSIVE SOFT">
    <meta name="robots" content="noindex, nofollow">
    <meta name="Pragma" content="no-cache">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Login/bootstrap.css">
    <link rel="stylesheet" href="~/Login/my-login.css">
    <link rel="shortcut icon" href="~/Login/favicon.svg" type="image/x-icon">

</head>

<body class="my-login-page" style="background-image: url('../Login/bg_login.jpg'); background-repeat: no-repeat; background-position: center; background-size: cover;">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper">
                    <div class="brand">
                        <a asp-controller="Account" asp-action="Login"><img src="~/Login/logo.jpg" alt="logo"></a>
                    </div>
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title">Kayıt Ol</h4>
                            @if (TempData["message"] != null)
                            {
                                <partial name="_resultmessages" model="@(TempData.Get<ResultMessages>("message"))" />
                            }
                        <form class="form form-validate-jquery" asp-controller="Account" asp-action="Register">
                            @if (Model.ReturnUrl != null)
                            {
                                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                            }

                            <div class="form-group">
                                <label for="NormalizedUserName">İsim Soyisim</label>
                                <input id="NormalizedUserName" type="text" class="form-control" name="NormalizedUserName" required autofocus>
                                <div class="invalid-feedback">
                                    Lütfen isim soyisim adınızı giriniz
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="name">Kullanıcı Adı</label>
                                <input id="name" type="text" class="form-control" name="UserName" required autofocus>
                                <div class="invalid-feedback">
                                    Lütfen kullanıcı adınızı giriniz
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="birtday">Doğum Tarihi</label>
                                <input id="birtday" type="date" class="form-control" name="BirthDate" required autofocus>
                                <div class="invalid-feedback">
                                    Lütfen doğum tarihini giriniz
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="PhoneNumber">Telefon Numarası</label>
                                <input id="PhoneNumber" type="text" data-mask="(999) 999-9999" class="form-control" autocomplete="off" value="" placeholder="(5XX) XXX-XXXX " name="PhoneNumber" required autofocus>
                                <div class="invalid-feedback">
                                    Lütfen telefon numaranızı giriniz
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email">E-Mail Adresi</label>
                                <input id="email" type="email" class="form-control" name="Email" required autofocus>
                                <div class="invalid-feedback">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="password">Parola</label>
                                <input id="password" type="password" class="form-control" name="Password" required data-eye>
                                <div class="invalid-feedback">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="custom-checkbox custom-control">
                                    <input type="checkbox" name="agree" id="agree" class="custom-control-input" required="">
                                    <label for="agree" class="custom-control-label"><a asp-controller="Account" asp-action="UyelikSozlesmeleri">Koşul ve şartları</a> okudum ve onaylıyorum.</label>
                                    <div class="invalid-feedback">
                                        Lütfen ilerlemek için lütfen <a asp-controller="Account" asp-action="UyelikSozlesmeleri">Koşul ve şartları</a> okuyunuz ve onaylayınız.
                                    </div>
                                </div>
                            </div>

                            <div class="form-group m-0">
                                <button type="submit" class="btn btn-primary btn-block">
                                    Kayıt Ol
                                </button>
                                <br />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>
                            <div class="mt-4 text-center">
                                Bir Hesabınız zaten mevcut mu? <a asp-controller="Account" asp-action="Login">Giriş</a>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Login/jquery.min.js"></script>
    <script src="~/Login/my-login.js"></script>

    <script>
        document.getElementById('PhoneNumber').addEventListener('input', function (e) {
            var x = e.target.value.replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,4})/);
            e.target.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? '-' + x[3] : '');
        });
    </script>
</body>

</html>