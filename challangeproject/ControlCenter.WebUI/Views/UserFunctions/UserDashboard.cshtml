                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <form asp-controller="UserFunctions" asp-action="DeleteUserContent" method="post">
                                    <div class="card-body">
                                        <table class="table datatable-column-search-selects">
                                            <thead>
                                                <tr>
                                                    <th><input type="checkbox" id="checkAll" />&nbsp;<input type="submit" class="btn btn-dark" value="Sil" onclick="return confirm('Silmek İşlemine Devam Edilsin mi?')" /></th>

                                                    <th>Kullanıcı Profil Resmi</th>
                                                    <th>Tarih</th>
                                                    <th>Hakkımda Yazısı</th>
                                                    <th>Kişiye özel içerik</th>

                                                    <th class="text-center">Düzenle</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var Model in Model.UserContents)
                                                {
                                                    <tr>
                                                        <td><input type="checkbox" name="Id" class="cb-element" value="@Model.Id" /></td>
                                                        <td>

                                                            @if (Model.Content1 == "user.jpg" || Model.Content1 == "admin.jpg")
                                                            {
                                                                <img loading="lazy" class="img-fluid rounded-circle" src="~/global_assets/images/@Model.Content1" style="width:50px; height:50px;" />

                                                            }
                                                            else if (Model.Content1 != "user.jpg" || Model.Content1 != "admin.jpg")
                                                            {
                                                                <img loading="lazy" class="img-fluid rounded-circle" src="https://intranetportal.psoakademi.com/wwwportal/profile/@Model.Content1" style="width:50px; height:50px;" />

                                                            }
                                                            else
                                                            {
                                                                <p>Profil Resmi Yok</p>
                                                            }
                                                        </td>
                                                        <td>@Model.Date</td>
                                                        <td>

                                                            @if (@Model.Content2 != null)
                                                            {
                                                                <br />
                                                                <p>Hakkımda Yazısı Bulunuyor</p>
                                                            }
                                                            else
                                                            {
                                                                <p>Mevcut değil</p>
                                                            }
                                                        </td>
                                                        <td>

                                                            @if (@Model.Content3 != null)
                                                            {
                                                                <br />
                                                                <p>Kullanıcı içeriği bulunuyor</p>
                                                            }
                                                            else
                                                            {
                                                                <p>Mevcut değil</p>
                                                            }
                                                        </td>
                                                        <td class="text-center">
                                                            <div class="list-icons">
                                                                <div class="dropdown">
                                                                    <a href="#" class="list-icons-item" data-toggle="dropdown">
                                                                        <i class="icon-menu9"></i>
                                                                    </a>

                                                                    <div class="dropdown-menu dropdown-menu-right">
                                                                        <a class="dropdown-item" href="/UserFunctions/EditUserContent/@Model.Id"><i class="icon-pencil3"></i> Düzenle</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                    <!-- My Dropbox -->
                    <div class="tab-pane fade" id="mydropbox">
                        <div class="card">
                            <div class="card-header bg-primary header-elements-inline">
                                <span class="card-title font-weight-semibold">Dosyalar</span>
